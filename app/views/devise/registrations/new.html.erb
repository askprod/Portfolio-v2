<section data-dark-overlay="5" class="u-py-100 u-h-100vh u-flex-center signup-back" >
		<div class="container">
			<div class="row">
				<div class="col-lg-5 m-auto text-center">
					<div class="card box-shadow-v2 bg-light-white u-of-hidden">
						<h2 class="bg-purple-light m-0 py-3 text-white">REGISTER</h2>
						<div class="p-4 p-md-5">
            
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <%= render "devise/shared/error_messages", resource: resource %>
                    
								<div class="input-group u-rounded-50 border u-of-hidden u-mb-20">

									<div class="input-group-addon bg-white border-0 pl-3 pr-3 icon-padding ">
										<span class="icon icon-User text-primary"></span>
									</div>

                    <%= f.text_field :username, class: "form-control border-0 p-3", placeholder: "Username" %>
								</div>

								<div class="input-group u-rounded-50 border u-of-hidden u-mb-20">
									<div class="input-group-addon bg-white border-0 pl-3 pr-3 icon-padding ">
										<span class="icon icon-Mail text-primary"></span>
									</div>

                      <%= f.text_field :email, class: "form-control border-0 p-3", placeholder: "Email" %>

								</div>
								<div class="input-group u-rounded-50 border u-of-hidden u-mb-20">
									<div class="input-group-addon bg-white border-0 pl-3 pr-3 icon-padding ">
										<span class="icon icon-ClosedLock text-primary"></span>
									</div>
                  
                  <%= f.password_field :password, class: "form-control border-0 p-3", placeholder: "Password" %>

								</div>

                <div class="input-group u-rounded-50 border u-of-hidden u-mb-20">
									<div class="input-group-addon bg-white border-0 pl-3 pr-3 icon-padding ">
										<span class="icon icon-ClosedLock text-primary"></span>
									</div>
                  
                  <%= f.password_field :password_confirmation, class: "form-control border-0 p-3", placeholder: "Password Confirmation" %>

								</div>

                  <%= f.submit "Register", class: "actions btn btn-primary  u-mt-20 u-w-170" %>

						</div>
					</div>
				</div>
			</div>
		</div>
    <% end %>
	</section>

